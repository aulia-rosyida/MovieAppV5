<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dicoding.auliarosyida.moviesapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyMovieApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_movie_filter_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_movie_filter_24"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoviesApp"
        tools:ignore="GoogleAppIndexingWarning"
        android:fullBackupContent="@xml/backup_descriptor">

        <activity android:name="com.dicoding.auliarosyida.moviesapp.core.ui.SplashScreenActivity"
            android:theme="@style/Theme.MoviesApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.dicoding.auliarosyida.moviesapp.core.ui.landingpage.LandingActivity"/>

        <activity
            android:name="com.dicoding.auliarosyida.moviesapp.core.ui.detailpage.DetailMovieActivity"
            android:label="@string/title_activity_detail_movie"
            android:parentActivityName="com.dicoding.auliarosyida.moviesapp.core.ui.landingpage.LandingActivity"
            android:theme="@style/Theme.MoviesApp.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dicoding.auliarosyida.moviesapp.core.ui.landingpage.LandingActivity" />
        </activity>

        <activity
            android:name="com.dicoding.auliarosyida.moviesapp.core.ui.detailpage.DetailTvShowActivity"
            android:label="@string/title_activity_detail_tvshow"
            android:parentActivityName="com.dicoding.auliarosyida.moviesapp.core.ui.landingpage.LandingActivity"
            android:theme="@style/Theme.MoviesApp.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dicoding.auliarosyida.moviesapp.core.ui.landingpage.LandingActivity" />
        </activity>



    </application>

</manifest>